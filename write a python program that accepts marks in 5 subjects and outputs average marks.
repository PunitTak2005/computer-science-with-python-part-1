def calculate_average(marks):
    total_marks = sum(marks)
    average_marks = total_marks / len(marks)
    return average_marks

def main():
    marks = []
    subjects = ["first", "second", "third", "fourth", "fifth"]
    
    for subject in subjects:
        try:
            mark = float(input(f"Enter the marks for the {subject} subject: "))
            if mark < 0 or mark > 100:
                print("Marks should be between 0 and 100. Please enter a valid value.")
                return
            marks.append(mark)
        except ValueError:
            print("Invalid input. Please enter a numeric value.")
            return
    
    average_marks = calculate_average(marks)
    print(f"The average marks for the 5 subjects is: {average_marks:.2f}")

if __name__ == "__main__":
    main()
